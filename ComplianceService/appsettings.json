{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ComplianceDb;integrated security=true;TrustServerCertificate=True;"
  },

  "ServiceUrls": {
    "InventoryService": "http://localhost:5001"
  },

  "Scheduler": {
    "ComplianceRunIntervalMinutes": 60,
    "RenewalReminderDays": 30
  },

  "Jwt": {
    "Key": "THIS_IS_A_SUPER_SECRET_KEY_CHANGE_IN_PRODUCTION",
    "Issuer": "AuthService",
    "Audience": "AllMicroservices"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/compliance-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
